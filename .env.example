# Server Configuration
NODE_ENV=development
PORT=3333
HOST=localhost

# Security Settings
JWT_SECRET=change-this-in-production-environment
JWT_EXPIRY=24h
COOKIE_SECRET=change-this-cookie-secret-in-production

# Feature Flags
ENABLE_AUTH=false
ENABLE_OCR=true
ENABLE_RATE_LIMIT=false

# File Storage
MAX_FILE_SIZE=20971520  # 20MB in bytes
FILE_EXPIRY=3600000     # 1 hour in milliseconds

# Logging
LOG_LEVEL=debug
LOG_FORMAT=simple